<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:l="sap.ui.layout"
    xmlns:fb="sap.ui.comp.filterbar">
    <t:Table id="TableArticoli" rows="{appModel>/Articoli}" selectionMode="None" visibleRowCountMode="Auto" ariaLabelledBy="title" enableCellFilter="true" firstVisibleRowChanged="onScroll">
        <t:columns>
            <t:Column id="Select" hAlign="Center" resizable="true" autoResizable="true" width="50px">
                <t:template>
                    <CheckBox id="_IDEGen_checkboxChanged" selected="{Changed}" valueState="Information" select="onSelectedChangeCheckbox">
                        <layoutData>
                            <FlexItemData growFactor="1"/>
                        </layoutData>
                    </CheckBox>
                </t:template>
            </t:Column>
            <t:Column id="Column1" hAlign="Begin" resizable="true" autoResizable="true" filterProperty="FILTER" sortProperty="FILTER">
                <Label text="{i18n>lbl.Articolo}"/>
                <t:template>
                    <Text text="{CODARTICOLO}  {DESCRARTICOLO}"/>
                </t:template>
            </t:Column>
        </t:columns>
    </t:Table>
    <Button id="onSalvaArticoli" text="Aggiungi Articoli" press="onSalvaArticoli">
        <layoutData>
            <OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" shrinkable="true"
                                                    minWidth = "50px"/>
        </layoutData>
    </Button>
</core:FragmentDefinition>